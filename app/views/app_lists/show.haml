- provide(:title, "#{current_user.first_name}'s notes for #{@job.name}") 

.dashboard
.row-fluid
  .span7	
    .row-fluid
      .span8  
        = link_to @job do 
          %h3
            = @company.name
            = @job.name  
        Closes #{@job.due_date.strftime("%B %e")}
        %br
        Type: #{Role.find(@job.role_id).role}
        %br
        Discipline: #{Category.find(@job.category_id).discipline}

      .span4
        .pull-right
          =link_to "http://#{@job.link}", :target => "blank" do
            .go-to-link
              Apply now at their website
    %hr
    = form_for @appList, :as => :applist, remote: true do |f|
      = f.select :status, [['Research'], ['Writing Application'], 
        ['Submitted & Waiting'],['Testing'],                      
        ['Interview'],['Unfollow', 'unfollow']],                  
       {},:onchange => "this.form.submit()";                     
      = f.hidden_field :id, :value => @appList.id
    %hr
	
    %div{:class => "editer-@job-comments"}


      #comment-area.comment-show
      - @appList.show_normal_notes.reverse.each do |normal|
        %div{:id => "comment-#{normal.id}"}
          .comments-header
            %span.time= (normal.updated_at).localtime.strftime("%d %b %I:%M %P")
            %span.pull-right.time
              = link_to "Delete", normal, method: :delete,  |
                remote: true, data: { confirm: 'You Sure?'} |
            %br/
          = simple_format(normal.info)
      .pad-top
        = render partial: 'comments/comment', collection: @comments, as: :comment
        = render partial: 'comments/form', locals: { comment: @new_comment }
        - if false
          = form_for @appList.create_new_note, :as => :note, remote: true do |a|
            = a.text_area :info, :class=>"note-area",                       |
              :placeholder => "Add a useful note about this particular app" |
            = a.hidden_field :app_list_id, :value => @appList.id
            = a.hidden_field :user_id, :value => current_user.id
            = a.hidden_field :kind, :value => "comment"
            = a.hidden_field :id, :value => @appList.id
            = a.submit :class => "btn btn-success"

  .span5
    .wiki-title
      %h6
        Public Wiki for 
        = @job.find_company.name
        = @job.name
    .wiki-info
      -if @job.wiki == nil
        No one's added information about this job yet - add your insights here
      -else
        =simple_format(@job.wiki)
      .pad-top
        %br
        -if signed_in?
          =link_to "Edit Public Wiki", edit_job_path(@job), :class => "sign-up-button"
        -else
          =link_to "Edit Job", new_user_registration_path, :class => "sign-up-button"

    -if @job.forum_link != nil			
      .wiki-title
        =link_to @job.forum_link, :target => "blank" do
          %h6 Go to the Whirlpool forum for this job