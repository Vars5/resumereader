<div class="leftBar">
	<h2>Sign Up</h2>
	</br>
	<%=form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<div class="errors">
			<%= devise_error_messages! %>
		</div>
		<p><%= f.email_field :email, :placeholder => "Email" %></p>
		<p><%= f.password_field :password, :placeholder => "Password" %>
			<%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %></p>
		</br>
		<div><%= f.submit "Create my account", :class => "btn btn-success" %></div>
	<% end %>
	<%= render "devise/shared/links" %>	
</div>