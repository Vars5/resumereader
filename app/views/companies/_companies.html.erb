
				<% @company.each do |c| %>
					<%= link_to c do %>
						<span class="big-font"><strong><%= c.name %></strong> </span><br />
						<%= Industry.find(c.industry_id).industry %> -
						<% if c.has_number_of_jobs != 0 %>
							 <%= c.jobs.count %> Job Opportunities
						<% end %><br />
						

					<% end %>
						<%= render :partial => 'companies/follow_form', :locals => {:c => c} %>
						<br />
				<% end %>
				
				<%= will_paginate @company %>




				
