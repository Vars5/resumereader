<head>
	<% provide(:title, "Resquery | All Companies") %>
	<meta property='st:type' content='All Companies ' />

</head>



<div class="hierachy">
	<div class="row-fluid">
		<div class="span12 bottom-border">
			<b>Companies List</b>
			<span class="pull-right"><%= render 'layouts/swiftype'%></span>
		</div>
	</div>
</div>

	<div class="row-fluid">
		<div class="span12">
			<h3></h3>
			<p class="grey-text"> <%= Company.count %> companies which offer  
				reputable grad and internship opportunities </p><br />
		</div>
	</div>	
	
	<div class="row-fluid">
		<div class="span4">
	
		<%= form_tag companies_path, :method => 'get' do %>
		  <p>
			<%= select_tag :industry_id, options_from_collection_for_select(Industry.all, "id", "industry"), include_blank: true %>
			
		    <%= submit_tag "Search", :industry => nil %>
		  </p>
		<% end %>	
		</div>
	</div>
			

	<div class="row-fluid">
		<div class="span10 jobIndex">
		
			<ul class="unstyled">				
				<%= render 'companies' %>
			</div>
	</div>
