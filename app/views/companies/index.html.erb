<br />
<div class="container">
	<div class="row">
		<div class="span12">
			<h3>Companies List</h3>
			<p class="grey-text"> <%= Company.count %> companies which offer  
				reputable grad and internship opportunities </p><br />
		</div>
	</div>	
	<div class="row">
		<div class="span6 jobIndex">
			<ul class="unstyled">

				<%= form_tag companies_path, :method => 'get' do %>
				  <p>
				    <%= text_field_tag :search, params[:search] %>
				    <%= submit_tag "Search", :name => nil %>
				  </p>
					<%= render 'companies' %></div>
				<% end %>
			</div>
	</div>
</div>				