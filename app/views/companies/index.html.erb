<head>
	<% provide(:title, "Resquery | All Companies") %>
	<meta property='st:type' content='All Companies ' />

</head>

<div class="hierachy">
	<div class="row-fluid">
		<div class="span12 bottom-border">
			<b>Companies List</b>
		
		</div>
	</div>
</div>

	<div class="row-fluid">
		<div class="span12">
			<h3></h3>
			<p class="grey-text"> <%= Company.count %> companies which offer  
				reputable grad and internship opportunities </p><br />
		</div>
	</div>	
	
	<div class="row-fluid">
		<div class="span4">
			<h4> <b> Search by Industry </h4></b>
				
		<%= form_tag companies_path, :method => 'get' do %>
		  <p>
			<%= select_tag :industry_id, options_from_collection_for_select(Industry.all, "id", "industry"), include_blank: true, :onchange => "this.form.submit()" %>
		    
		  </p>
		<% end %>	
		</div>
	</div>
	</br>

	<div class="row-fluid">
		<div class="span12 jobIndex">
		
			<ul class="unstyled">				
				<% @company.each do |c| %>
					<div class="row-fluid">
						<div class="span4">
							<%= link_to c do %>
								<span class="big-font"><strong><%= c.name %></strong> </span><br />
								<%= Industry.find(c.industry_id).industry %> 
								<% if c.has_number_of_jobs != 0 %>
									 <br /><%= c.jobs.count %> Job Opportunities
								<% end %>		
							<% end %>
						</div>
						<div class="span8">
							<% if signed_in? %>
								<%= render :partial => 'companies/follow_form', :locals => {:c => c} %>
							<% end %>
						</div>
					</div>
					<hr>		
				<% end %>

				<%= will_paginate @company %>
			</div>
	</div>
