<div class="container-fluid">
	<div class="row-fluid">
		<div class="span3">
			<h2><%= @company.name %></h2>
			<p><%= link_to 'Edit company details', edit_company_path %></p>
			<p>Industry: <%= @company.industry %></p>
			<p>Website: <%= link_to "#{@company.website}", "http://#{@company.website}" %></p>
			<p>HR Email: <%= @company.hr_email %></p>
		</div>
		
		<div class="span6">
			<legend>Information:</legend>
			<p><%= simple_format(@info) %></p>
		</div>
		
		<div class="span3">
			<legend>Create a job</legend>
			<%= form_for @jobs, :as => :jobs do |f| %>
				<%= f.text_field :name %>
				<%= f.text_field :discipline %>
				<%= f.text_field :info %>
				<%= f.hidden_field :id, :value => params[:id] %>
					
				<%= f.submit %>
			<% end %>
			
			<% if @companyJobs != nil %>
				<% @companyJobs.each do |test| %>
					<p>Job Name: <%=link_to	"#{test.name}", test %></p>
				<% end %>
			<% end %>
		</div>
	</div>
</div>