<div class="container-fluid">
	<div class="row-fluid">
		<div class="span3">
			<h2><%= @company.name %></h2>
			<p><%= link_to 'Edit company details', edit_company_path %></p>
			<p>Industry: <%= @company.industry %></p>
			<p>Website: <%= link_to "#{@company.website}", "http://#{@company.website}" %></p>
			<p>HR Email: <%= @company.hr_email %></p>
		</div>
		
		<div class="span6">
			<legend>Information:</legend>
			<p><%= simple_format(@info) %></p>
		</div>
	</div>
</div>