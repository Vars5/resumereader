<div class="container">
	<div class="row">
		
		<legend>Add Employment</legend>
		<%= form_for @employment, :as => :employment do |f| %>
		
			<%= f.text_field :company, :placeholder => "Company Name" %></br>
			<%= f.text_field :role,    :placeholder => "Job Role" %>
			
			<%= f.submit %>
			
		<% end %>
		
	</div>
</div>