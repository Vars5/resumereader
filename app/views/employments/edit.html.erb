<div class="container">
	<div class="row">
		
		<legend>Edit Employment</legend>
		<%= form_for @employment, :as => :employment do |f| %>
		
			<%= f.text_field :company, :placeholder => "Company Name" %></br>
			<%= f.text_field :role,    :placeholder => "Job Role" %>
			
			<%= f.submit %>
			
		<% end %>
		
		<%= link_to "Delete This Employment Record", @employment, method: :delete,
															  data: { confirm: 'You Sure?'}%>
		
	</div>
</div>