#container
	.item
		.info-box-light-orange
			.center-alignment
				%h5 Welcome to ResumeQuery!
				%br This is an awesome website where you can become more awesome by being awesome
			
	- @comments.each do |comment|
		.item
			.info-box-light-teal
				%h5= comment.body
				=comment.subject

	- @company.each do |company|
		.item
			.info-box-light-orange
				.pad-top-tiny
				.center-alignment
					- if !company.logo.url.blank?
						= image_tag(company.logo.url)
						%h5= link_to company.name, company
				=company.industry
				%br
				=company.info
				%br
				%i(class="icon-briefcase")
				Go to company website
				%br				
				=image_tag('whirlpool-logo.png', size: "15x15") 
				Go to Whirlpool Forum

	.item
		=link_to 'http://www.careers.unsw.edu.au/', :target => '_blank' do 
			.info-box-light-teal
				.center-alignment
					=  image_tag('unsw.png')
					%h5 At UNSW? Don't lose a chance to stand out
					There's a brilliant team at UNSW Careers & Employment waiting to improve your resume and apps. Get in before its busy.
