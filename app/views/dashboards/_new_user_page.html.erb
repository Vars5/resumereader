<div class="hierachy">
	<div class="row-fluid">
		<div class="span12 bottom-border">
			<b><span class="green-heading">Welcome to ResQuery <%= current_user.first_name %>!</span></b>
		</div>
	</div>
</div>


<%= link_to jobs_path do %>
	<h4></h4>
	<p> Start Tracking jobs now! ResQuery is great for reducing the stress and business of job applications
		 by having them all sorted in one place for you </p>
<% end %>



<div class="row-fluid margin-top">
	<div class="span6">
		<h5>Follow your first job:</h5>
		<% @jobs.each do |job| %>
			<%=link_to job.name, job %><br />
			<% if false %>
				<%= form_for job, :as => :applist do |f|%>
					<%= f.hidden_field :job_id, :value => params[:id] %>
					<%= f.submit "Add to Dashboard", :class => "btn btn-info"%>
				<% end %>
			<% end %>
		<% end %>
	</div>
	<div class="span6">
		<h5>Or look up things related to your discipline:</h5>

	</div>
</div>


<div class="row-fluid margin-top">
	<h5>Things from our knowledge base:</h5>
	<% Article.all.each do |article| %>
		<%= link_to  article.title, article  %></br>
	<% end %>

</div>