<div class="hierachy">
	<div class="row-fluid">
		<div class="span12 bottom-border">
			<b><span class="green-heading">Welcome to ResQuery <%= current_user.first_name %>!</span></b>
			<span class="pull-right"><%= render 'layouts/swiftype'%></span>
		</div>
	</div>
</div>


<div class="row-fluid bottom-border ">
	<div class="span4 right-border">
		<h5>Follow a company for updates:</h5>
		<br />
		<% @company.each do |c| %>
		<div class="row-fluid">
			<div class="span6">
				<%= link_to c do %>
					<b><%= c.name %></b><br />
					<%= Industry.find(c.industry_id).industry %> 	
				<% end %>
			</div>
		
			<div class="span6">
				<%= render :partial => 'companies/follow_form', :locals => {:c => c} %>
			</div>
		</div>
		<% end %>
	</div>
	
	<div class="span8">
		<h5>Follow your first job:</h5>
		<br />
		<% @jobs.each do |job| %>
			<div class="row-fluid">
				<div class="span6">
					<%= link_to job do %>
						<strong><%= job.find_company.name %></strong><br/>
						<%=job.name %><br />
					<% end %>
				</div>
			
				<div class="span6">
					<%= form_for(current_user.app_lists.build, :as => :applist) do |f| %>
						<%= f.hidden_field :job_id, :value => job.id %>
						<%= f.submit "Add to My Jobs", class: "btn btn-info" %>		
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
	
</div>