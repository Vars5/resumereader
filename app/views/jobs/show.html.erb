<div class="container pad-top">
	<div class="row pad-top">
		<div class="span7 pad-top">
			<h3>
			<% cache @job do %>
				<%= @job.name %><br />
			</h3>
			<h4>
				<strong><%= link_to @job.find_company.name, @job.find_company %></strong>
				<% if @job.due_date != nil %>	
					Closes <%= @job.due_date.strftime("%B %e")%>
				<% end %>
			</h4>	
				<hr>
				<% if current_user.is_following_applist?(@job) %>
					<div class='alert alert-info'>You are following this job</div>
				<% else %>
					<%= form_for @appList, :as => :applist do |f|%>
						<%= f.hidden_field :job_id, :value => params[:id] %>
						<%= f.submit "Follow Job", :class => "btn btn-info"%>
					<% end %>
				<% end %>
				<hr>
			
				
				Discipline: <%= @job.discipline %></br>
				HR Contact: <%= @job.relevant_hr_email %></br>
				<% if @job.has_website? %>
					<%= link_to "Official Link", "http://#{@job.link}" %></br></br>
				<% end %>
				<hr>
				<%= simple_format(@job.info) %></br>
			<% end %>
			
		</div>
		<div class="span3 pull-right">
			<!-- Place company logo here later -->
			

		</div>
	</div>
</div>

<div class="container">
	<div class="row">

		
	</div>
</div>