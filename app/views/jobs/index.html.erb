<div class="hierachy">
	<div class="row-fluid">
		<div class="span12 bottom-border">
			<b>Open Job Opportunities</b>
			<span class="pull-right"><%= render 'layouts/swiftype'%></span>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span10 jobIndex">
		
		<b><h4> <%= link_to "Advanced Search", new_search_path %> </h4></b>
		</br>
		
		<ul class="unstyled">
			<% @jobs.each do |j| %>
				<%= link_to j do %>
					<li><strong><%= j.find_company.name %></strong> - <%= j.name %>  
					<span class="pull-right"><%= j.show_due_date%></span>
						<div id = "add_to_dashboard">
											
				<% end %>		
				</div>
						<%#= form_for @appList, :as => :applist do |f|%>
							<%#= f.hidden_field :job_id, :value => params[:id] %>
							<%#= f.submit "Add to Dashboard", :class => "btn btn-info"%>
				
					
					<%= form_for(current_user.app_lists.build, :as => :applist) do |f| %>
						<%= f.hidden_field :job_id, :value => j.id %>
						<%= f.submit "Add to Dashboard" %>
					</li>
					<% end %>
				
			<% end %>
		
		</br>
		<p>
			Can't find the job you are looking for, <%= link_to "tell us here", new_problem_path %>
			
		
	</div>
</div>
