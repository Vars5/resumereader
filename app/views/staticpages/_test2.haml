.test2
	.row.pad-top
		.large-offset-4.large-4.columns.test2signup
			.test2-content
				%h2.bold dempoints
				%h5 Share knowledge, give advice & build careers together
				%h6
				%br

				= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:id => "sign_up_user"}) do |f|
					
					= f.text_field :username, :placeholder => "Username", :id => "focus"
					= f.email_field :email, :placeholder => "UNSW Student Email", :title => "A valid unsw email looks like 'z1234567@student.unsw.edu.au' "
					= f.password_field :password, :placeholder => "Password  (6 or more characters)"
					= f.hidden_field :role, :value => "student"
					- if false
						= f.password_field :password_confirmation, :placeholder => "Password Confirmation"
					%br
					%br
					%div= f.submit "Join Dempoints", :class => "button success radius small"
					%br
					%br
				=link_to "Already have an account? Sign in", new_user_session_path, :class => "feed-subtext"
				.errors
				= devise_error_messages!
		.large-1.columns
