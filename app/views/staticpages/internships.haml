.dashboard

.row-fluid
	.span6
		%h4(class="applist-area")
			Internships
		-@jobs.each do |job|
			=link_to job do 
				.appManage
					.row-fluid
						.span8	
							.pad-lightly
								%b= job.show_company_name
								\ &nbsp - &nbsp 
								=job.name
						.span4
							.pull-right
								=job.show_due_date
								&nbsp &nbsp 
								=link_to "Follow", new_user_registration_path, :class => "follow-button"