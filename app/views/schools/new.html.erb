<div class="container">
	<div class="row">
		<%= form_for @school, :as => :user do |f|%>	

			<legend> Education </legend>
			<p><%= f.text_field :name	, :placeholder => "University/School (Required)" %></p>
			<p><%= f.text_field :degree, :placeholder => "Degree Name (Required)" %></p>
			<p><%= f.text_field :majors, :placeholder => "Majors or Specialisation Name" %></p>
			<p><%= f.text_field :marks,  :placeholder => "Marks or GPA" %> </p>
	
			<%= f.submit "Add you school" %>

		<% end %>
	</div>
</div>	
	