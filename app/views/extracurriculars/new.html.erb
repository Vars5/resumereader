<div class="container">
	<div class="row">
		
		<legend>Add Extracurricular</legend>
		<%= form_for @extracurricular, :as => :extracurricular do |f| %>
		
			<%= f.text_field :name, :placeholder => "Organisation Name" %></br>
			<%= f.text_field :role,    :placeholder => "Role" %>
			
			<%= f.submit %>
			
		<% end %>
		
	</div>
</div>