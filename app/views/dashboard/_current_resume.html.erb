<legend> Education <div class="pull-right"><%= link_to 'Edit', structure_path%></div></legend>
	
	<% if @schoolCount != 0 %>
		<% @schoolAll.each do |school| %>
			<%= link_to "/schools/#{school.id}/edit" do %>
				<ul class="unstyled">
					<li><strong><%= school.name %></strong></li>
					<li><%= school.degree %></li>
					<li><%= school.majors %></li>
					<li><%= school.marks%></li>
				</ul>	
			<% end %>
		<% end %>

	<% else %>	
		<%=link_to 'Start filling in your educational details', structure_path %>	
	<% end %>

	</br></br>
	
<legend> Employment <div class="pull-right"><%= link_to 'Edit', structure_path%></div></legend>

	<% if @employmentCount != 0 %>
		<% @employmentAll.each do |employment| %>
			<% link_to employment do %>
				<ul class="unstyled">
					<li><strong><%= employment.company %></strong></li>
					<li><%= employment.role %></li>
				</ul>
			<% end %>
		<% end %>
	<% else %>
		<%=link_to 'Start filling in your Employment details', structure_path %>
	<% end %>	
	
				
					
