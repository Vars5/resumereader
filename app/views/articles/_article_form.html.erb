<div class="container">
			<%= form_for @article do |f| %>
				<%= f.text_field :author, :placeholder => "Author" %> </br>
				<%= f.text_field :published, :placeholder => "Date, insert as DD/MM/YYYY" %>
				<%= f.text_field :title, :placeholder => "Title" %>
				<%= f.text_area :content, :placeholder => "Content"%> </br>
				
					
				<%= f.submit %>
			<% end %>

			<%= link_to "Delete This Job", @article, method: :delete,
																  data: { confirm: 'You Sure?'}%>
</div>