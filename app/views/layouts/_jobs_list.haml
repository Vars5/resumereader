%h4(class="applist-area orange-text")
	Jobs & Internships List
-@jobs.each do |job|
	=link_to job do 
		.appManage
			.row-fluid
				.span8	
					.pad-lightly
						%b= job.show_company_name
						\ &nbsp - &nbsp 
						=job.name
				.span4
					.pull-right								
						-if job.show_due_date == "Closed"
							%span(class="red-text")
								=job.show_due_date
						-else 
							=job.show_due_date
						&nbsp &nbsp 
						=link_to "Follow Job", new_user_registration_path, :class => "follow-button"