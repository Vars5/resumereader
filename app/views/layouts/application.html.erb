		<% if signed_in?%>	
			<%= render 'layouts/signed_in_page'%>	
		<% else %>
			<div class="row">
				<%= yield %>
				<div class="row">
					<div class="large-11 large-offset-1 columns">
						<%= render 'layouts/footer'	%>
