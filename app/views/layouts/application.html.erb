<!DOCTYPE html>
<html>
	<head>

	  <title>Internship & graduate job application management software: ResumeQuery</title>
     <link href='http://fonts.googleapis.com/css?family=Noto+Sans:400,700' rel='stylesheet' type='text/css'>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	  <%= favicon_link_tag 'favicon.ico' %>
	</head>
	<body>
		<% if signed_in? %>
			<% cache "header" do %>
				<%=render 'layouts/signed_in_header'%>
			<% end %>
		<% else %>
			<%=render 'staticpages/copywritearea'%>			
		<% end %>
		
		<% if flash.count > 0 %>
		<div class="container">
			<div class="row">
				<div class="span12">
				<% flash.each do |key, message| %>
					<%= content_tag :div, message,class: "alert alert-#{key}", :id => "flash" if message.length > 0 %>
				<% end %>
				</div>
			</div>
		</div>
		<% end %>
		
		<%= yield %>
		<% cache "footer" do %>
			<%=render 'layouts/footer'%>
		<% end %>
		<%=render 'shared/google_analytics' if Rails.env.production? %>
	</body>
</html>
