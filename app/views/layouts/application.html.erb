<!DOCTYPE html>
<html>
	<head>
	  <title>ResumeQuery - Resume creation software, applicant differentiation</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	  <%= favicon_link_tag 'favicon.ico' %>
	</head>
	<body>
		<% if signed_in? %>
			<%=render 'layouts/signed_in_header'%>
		<% else %>
			<%=render 'staticpages/copywritearea'%>		
		<% end %>
		
		<% if flash.count > 0 %>
		<div class="container">
			<div class="row">
				<div class="span12">
				<% flash.each do |key, message| %>
					<%= content_tag :div, message,class: "alert alert-#{key}", :id => "flash" if message.length > 0 %>
				<% end %>
				</div>
			</div>
		</div>
		<% end %>
		
		<%= yield %>
		<%=render 'layouts/footer'%>
		<%=render 'shared/google_analytics' if Rails.env.production? %>
	</body>
</html>
