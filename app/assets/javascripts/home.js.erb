$(document).ready(function() {

	//GET BROWSER WINDOW HEIGHT
	var currHeight = $(window).height();
	var clickedUser = false;
	var collapsedNav = false;
	//var currWidth = $('#content').width;
	//SET HEIGHT OF SIDEBAR AND CONTENT ELEMENTS
	$('#sidebar, #content, #insidebar').css('height', currHeight);

	//ON RESIZE OF WINDOW
	$(window).resize(function() {

		//GET NEW HEIGHT
		var currHeight = $(window).height();	
		//RESIZE BOTH ELEMENTS TO NEW HEIGHT
		$('#sidebar, #content, #insidebar').css('height', currHeight);

	});

	if ( $(window).width() < 641) {     
		$('#sidebar').animate({
			width:0
		})
		$('#content').animate({
			marginLeft:parseInt($('#content').css('marginLeft'))-220,
			paddingLeft:0
		})
	}



	$('#navbar-expand').click(function(){
		$('#sidebar').animate({
			width:90
		})
		$('#content').animate({
			marginLeft:parseInt($('#content').css('marginLeft'))-130
		})
		$('#insidebar').animate({
			marginLeft:parseInt($('#insidebar').css('marginLeft'))-130
		})
		$('.navbar-text').hide()
		$(this).hide()
		$('#navbar-collapsed').show()
		$('.nav-collapse').animate({
			width:parseInt($('.nav-collapse').css('width'))-130
		})
		collapsedNav = true;
		$(this).hide
	});

	$('#navbar-collapsed').click(function(){
		$('#sidebar').animate({
			width:220
		})
		if(clickedUser==false){
			$('#content').animate({	
				marginLeft:220
			})
		} else {
			$('#content').animate({
				marginLeft:parseInt($('#content').css('marginLeft'))+130
			})
		}
		$('#insidebar').animate({
			marginLeft:parseInt($('#insidebar').css('marginLeft'))+130
		})
		$('.navbar-text').delay(250).show(150)
		$(this).hide()
		$('#navbar-expand').show()
		$('.nav-collapse').animate({
			width:parseInt($('.nav-collapse').css('width'))+130
		})
	})

	$('#user-control').click(function(){
		if(clickedUser==false){ 
			$('#insidebar').animate({
				width:220
			})
			$('#content').animate({
				marginLeft:parseInt($('#content').css('marginLeft'))+220
			})
			clickedUser=true;
		}else{
			$('#insidebar').animate({
				width:0
			})
			$('#content').animate({
				marginLeft:parseInt($('#content').css('marginLeft'))-220
			})
			clickedUser=false;
		}

	})


	//for onboarding pages
	$('.box').click(function() {
	    $('.box').each( function() {
	        if ($(this).offset().left < 0) {
	            $(this).css("left", "300%");
	        }
	    });

	    $(this).animate({
	         left: '-100%'
	     }, 500);

	     if ($(this).next().size() > 0) {
	         $(this).next().animate({
	             left: '50%'
	         }, 500);
	     } else {
	         $(this).prevAll().last().animate({
	             left: '50%'
	         }, 500);
	     }
	});


});